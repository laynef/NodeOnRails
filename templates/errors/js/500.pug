doctype html
html(lang="en")
    head
        include ../utils/meta.pug
        if environment === 'production'
            style
                include ../../assets/dist/pages/errors500.css
        else
            each file in cssFiles
                link(rel='stylesheet', type='text/css', href=`/assets/dist/pages/${file}.css?id=${hashId}`)
    body
        h1(style='text-align: center;') 500 Error
        h2(style='text-align: center;') Internal Server Error
        include ../utils/scripts.pug
        include ../utils/noscript.pug
        if environment === 'production'
            script(src=`/assets/dist/pages/${filePath}.js?id=${hashId}`, async)
        else
            each file in jsFiles
                script(src=`/assets/dist/pages/${file}?id=${hashId}`, async)
